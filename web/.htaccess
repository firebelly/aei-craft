<IfModule mod_rewrite.c>
RewriteEngine On
# Force single domain
RewriteCond %{HTTP_HOST} !^aeieng\.webfactional\.com [NC]
RewriteCond %{HTTP_HOST} !^aei-craft\.localhost [NC]
RewriteRule ^(.*)$ http://aeieng\.webfactional\.com%{REQUEST_URI} [R=301,L]

# Redirect old site /index.php/foo URLs to something we can match on to redirect (Craft uses /index.php?p= so we can't match on requests to ^index.php)
RewriteRule ^index.php/(.*)$ /oldsite/$1 [R=302,L,QSA]
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Send would-be 404 requests to Craft
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/(favicon\.ico|apple-touch-icon.*\.png)$ [NC]
    RewriteRule (.+) index.php?p=$1 [QSA,L]
</IfModule>
